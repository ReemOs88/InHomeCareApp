<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
   android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/babyBlue"
    tools:context=".caregiver.CaregiverProfileActivity">



    <androidx.coordinatorlayout.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp"
            android:clipToPadding="false">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_20sdp"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/caregiver_pic_profile_activity"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_20sdp"
                        android:src="@drawable/profile"
                        android:layout_height="@dimen/_100sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="2"
                        android:layout_margin="@dimen/_15sdp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Name:"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/caregiver_name_profile_activity"
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_margin="@dimen/_15sdp">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Phone:"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/caregiver_phone_profile_activity"
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_margin="@dimen/_15sdp">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Gender:"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/caregiver_gender_profile_activity"
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_margin="@dimen/_15sdp">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Type of service:"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/caregiver_typOfService_profile_activity"
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_margin="@dimen/_15sdp">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Specialist:"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/caregiver_specialize_profile_activity"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_margin="@dimen/_15sdp">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Age:"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/caregiver_ages_profile_activity"
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/edit_caregiver_profile_activity"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="@color/babyBlue"
                        android:text="Edit profile"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.core.widget.NestedScrollView>
<!--        <com.google.android.material.bottomnavigation.BottomNavigationView-->
<!--            android:id="@+id/bottomAppBar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="bottom"-->
<!--            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"-->


<!--            app:menu="@menu/bottom_app_par_caregiver"-->
<!--            />-->



    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>

</ScrollView>
