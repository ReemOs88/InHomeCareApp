<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".customer.CustomerHourlyContractActivity">
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:background="@drawable/card_view_shape"
       android:layout_marginStart="@dimen/_20sdp"
       android:layout_marginEnd="@dimen/_20sdp"

       android:layout_marginTop="@dimen/_10sdp"
       app:cardCornerRadius="@dimen/_20sdp"
       android:layout_gravity="center"
       android:layout_height="@dimen/_380sdp">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:weightSum="3"
          android:layout_height="wrap_content">
         <com.google.android.material.textfield.TextInputLayout

             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="@dimen/_15sdp"
             app:hintTextColor="@color/blue"
             app:boxStrokeColor="@color/blue"
             android:hint="Address"
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             app:startIconDrawable="@drawable/ic_baseline_location_on_24"
             app:startIconTint="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/address_hourly_contract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

         </com.google.android.material.textfield.TextInputLayout>
         <com.google.android.material.textfield.TextInputLayout

             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="@dimen/_15sdp"
             app:hintTextColor="@color/blue"
             app:boxStrokeColor="@color/blue"
             android:hint="Select date"
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             app:startIconDrawable="@drawable/ic_baseline_date_range_24"
             app:startIconTint="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/select_date_hourly_contract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

         </com.google.android.material.textfield.TextInputLayout>
         <com.google.android.material.textfield.TextInputLayout
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="@dimen/_15sdp"
             app:hintTextColor="@color/blue"
             app:boxStrokeColor="@color/blue"
             android:hint="Enter visit time"
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             app:startIconDrawable="@drawable/ic_baseline_access_time_24"
             app:startIconTint="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/select_time_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

         </com.google.android.material.textfield.TextInputLayout>
         <com.google.android.material.button.MaterialButton
             android:id="@+id/show_contract_btn"
             android:layout_width="match_parent"
             android:layout_margin="@dimen/_20sdp"
             app:cornerRadius="@dimen/_5sdp"
             android:text="Open contract"
             android:textAllCaps="false"
             android:layout_height="wrap_content"/>

      </LinearLayout>

   </androidx.cardview.widget.CardView>


</LinearLayout>